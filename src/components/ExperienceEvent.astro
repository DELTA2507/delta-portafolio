---
interface Props {
    role: string;
    place: string;
    link?: string;
    date: string;
    stack: string[];
    description: string;
}

const {role, place, link, date, stack, description} = Astro.props as Props;
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 rounded-full mt-3.5 -start-1.5 border border-neutral-900 bg-secondary"></div>
    <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
      <div class="md:flex-1">
        <h3 class="text-2xl whitespace-nowrap font-semibold text-secondary">
          {role}
        </h3>
        <a href={link} class="text-xl font-semibold text-white">
          {place}
        </a>
        <br>
        <time class="mb-1 text-sm font-normal leading-none text-neutral-400">
          {date}
        </time>
        <div class="flex gap-2 mt-2">
            {stack.map(stackIcon => (
                <img 
                    class="w-8 h-8 rounded-full" 
                    src={`/stackIcons/${stackIcon}.svg`} 
                    alt="Rounded icon" 
                />
            ))}
        </div>
      </div>
      <div class="md:w-1/2">
        <p class="text-base font-normal text-neutral-400">
          {description}
        </p>
      </div>
    </div>
  </li>
  