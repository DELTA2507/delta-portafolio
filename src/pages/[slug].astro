---
import ProyectSlugLayout from '../layouts/ProyectSlugLayout.astro';
import projects from "../data/projects";
import Carousel from '../components/Carousel.tsx';
import Breadcrumbs from '../components/Breadcrumbs.tsx';

export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project }
  }));
}

const { project } = Astro.props;
---

<ProyectSlugLayout title={project.title}>
    <div class="max-w-7xl mx-auto px-4 py-12">
      <Breadcrumbs
          paths={[
              { name: "Inicio", href: "/" },
              { name: project.slug },
          ]}
      />

    <!-- Big header on top -->
    <div class="flex flex-row items-center justify-between gap-4 mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold truncate">{project.title}</h1>
        <img class="w-15 lg:w-20 self-start sm:self-center" src={project.ownerLogo} alt="Owner Logo"/>
    </div>

    <!-- Two-column grid -->
    <div class="project-detail-container grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Left column: main content -->
        <div class="project-main lg:col-span-2 flex flex-col gap-6">

            <Carousel projectImages={project.images} client:load/>

            <div class="project-cta bg-white/5 backdrop-blur-xl rounded-2xl p-6 flex flex-col gap-4 lg:hidden">
            {project.link && (
                <a href={project.link} target="_blank" class="cta-link inline-flex items-center justify-center">
                Visit Project
                <i class="fa-solid fa-arrow-up-right-from-square ml-2"></i>
                </a>
            )}
            </div>

            <!-- Mobile tech stack -->
            {project.stack && project.stack.length > 0 && (
                <h2 class="font-semibold text-2xl">Stack utilizado</h2>
                <div class="project-stack bg-white/5 backdrop-blur-xl rounded-2xl p-3 flex flex-wrap gap-2">
                    <div class="flex gap-5">
                        {project.stack.map((stackIcon) => (
                        <img
                            class="w-10 h-10 transition-transform duration-300 group-hover:scale-105"
                            src={`/stackIcons/${stackIcon}.svg`}
                            alt={stackIcon}
                        />
                        ))}
                    </div>
                </div>
            )}

            <div class="project-description prose prose-invert max-w-3xl">
            {project.fullDescription || project.shortDescription}
            </div>
        </div>

        <!-- Right column: sticky info / CTA -->
        <div class="project-sidebar hidden lg:col-span-1 lg:flex flex-col">
            <div class="lg:sticky top-6 flex flex-col gap-6">
                <div class="project-logo rounded-xl overflow-hidden py-10">
                    <img src={project.proyectLogo} alt="Project Logo" />
                </div>

                <div class="project-cta bg-white/5 backdrop-blur-xl rounded-2xl p-6 flex flex-col gap-4">
                {project.link && (
                    <a href={project.link} target="_blank" class="cta-link inline-flex items-center justify-center">
                    Visit Project
                    <i class="fa-solid fa-arrow-up-right-from-square ml-2"></i>
                    </a>
                )}
                </div>
            </div>
        </div>
    </div>
  </div>
</ProyectSlugLayout>
